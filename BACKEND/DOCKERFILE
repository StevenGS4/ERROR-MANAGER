FROM node:22-slim

# Instalar dependencias del sistema necesarias para compilar módulos nativos
# (menos problemático que en Alpine)
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Crear directorio de trabajo
WORKDIR /app

# Copiar dependencias primero
COPY package*.json ./

# Instalar dependencias del proyecto
RUN npm install

# Copiar el resto de archivos
COPY . .

# Instalar CDS global, ya que quieres usar `cds run`
RUN npm install -g @sap/cds-dk

# Exponer puerto del servicio CAP
EXPOSE 3334

# Ejecutar CAP directamente
CMD ["cds", "run"]
